public class isLetterOrDigit {
	public static void main (String args[]) {
		
		char ch1, ch2;
		ch1 = 'B';
		ch2 = '2';
		
		boolean a1, a2;
		
		a1 = Character.isLetterOrDigit(ch1);
		a2 = Character.isLetterOrDigit(ch2);
		
		String str1 = ch1+ " é uma letra/ é um digito " + a1;
		String str2 = ch2+ " é uma letra/ é um digito " + a2;
		
		System.out.println (str1);
		System.out.println (str2);
	}

}
